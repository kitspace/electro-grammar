{
  "name": "electro-grammar",
  "private": true,
  "devDependencies": {
    "better-assert": "^1.0.2",
    "js-yaml": "^3.9.1",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2"
  },
  "scripts": {
    "test": "pipenv run nyc -- mocha --check-leaks --recursive --timeout 6000",
    "test-no-python": "DISABLE_PYTHON_TESTS=1 npm test",
    "coverage": "nyc report",
    "coverage:html": "nyc report --reporter=html",
    "fmt:js": "prettier --write test/**/*.js js/lib/**/*.js",
    "fmt:py": "pipenv run autopep8 --in-place python3/**/*.py",
    "fmt": "npm run fmt:js && npm run fmt:py"
  },
  "dependencies": {}
}
